<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_backgroundPink"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Logotipo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="199dp"
        android:layout_height="101dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Titulo-->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp"
        android:fontFamily="@font/anton_regular"
        android:text="LEÍDO"
        android:textColor="@color/md_theme_primary"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImage" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoImage"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="50dp"
            android:paddingEnd="20dp"
            android:paddingBottom="50dp"
            app:layout_constraintTop_toBottomOf="@+id/title">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Nombre de usuario"
                android:textColor="@color/md_theme_outlineVariant_mediumContrast"
                android:textSize="16sp" />

            <!-- Campo de Email -->
            <EditText
                android:id="@+id/usernameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_background_edtittext"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="@color/md_theme_onSurfaceVariant" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Contraseña"
                android:textColor="@color/md_theme_outlineVariant_mediumContrast"
                android:textSize="16sp" />

            <!-- Campo de Contraseña -->
            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_background_edtittext"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/md_theme_outlineVariant_mediumContrast" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="He olvidado mi contraseña"
                android:textAlignment="center"
                android:textColor="@color/selector_text_link"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Registrarse"
                android:textAlignment="center"
                android:textColor="@color/selector_text_link"
                android:textSize="12sp" />


            <!-- Botón de Registro -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/poppins_bold"
                android:padding="12dp"
                android:text="Entrar"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

